{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "JOR Task Manager",
  "version": "1.0.0",
  "identifier": "com.covionstudio.jortasks",

  "build": {
    "frontendDist": "../public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": ""
  },

  "app": {
    "windows": [],
    "security": { "csp": null }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "src-tauri/macos/entitlements.mas.plist",
      "minimumSystemVersion": "12.0"
    }
  }
}
